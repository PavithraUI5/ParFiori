			<Toolbar style="Clear">
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Book an appointment" press="onBook"></Button>
			</Toolbar>
		</headerToolbar>
		<ObjectListItem intro="{CATEGORY}" icon="{PIC}" title="{NAME}" number="{PRICE}" numberUnit="{UNIT}"></ObjectListItem>
	</List>
</core:FragmentDefinition>