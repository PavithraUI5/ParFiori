<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:head="cn.par.customControls">
	
	<List id="idChoiceList" items="{/choices}" mode="MultiSelect" selectionChange="onSelectedItems">
		<headerToolbar>
			<Toolbar style="Clear">
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Book an appointment" press="onBook"></Button>
			</Toolbar>
		</headerToolbar>
		<ObjectListItem intro="{category}" icon="{pic}" title="{name}" number="{price}" numberUnit="{unit}"></ObjectListItem>
	</List>
</core:FragmentDefinition>